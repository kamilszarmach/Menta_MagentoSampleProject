{
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "aoemedia/menta_magentocomponents",
                "type": "project",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/macopedia/Menta_MagentoComponents.git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {
                        "MagentoComponents": "lib/"
                    }
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "aoemedia/menta_generalcomponents",
                "type": "project",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/macopedia/Menta_GeneralComponents.git",
                    "reference": "master"
                },
                "autoload": {
                    "psr-0": {
                        "GeneralComponents": "lib/"
                    }
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "aoemedia/menta",
                "type": "project",
                "version": "dev-develop",
                "source": {
                    "type": "git",
                    "url": "https://github.com/macopedia/Menta.git",
                    "reference": "develop"
                },
                "autoload": {
                    "psr-0": {
                        "Menta": "lib/"
                    }
                }
            }
        }
    ],

    "minimum-stability": "dev",
    "require": {
        "phpunit/phpunit": "3.7.*",
        "instaclick/php-webdriver": "dev-master",
        "ext-curl": "*",
        "ext-gd": "*",
        "aoemedia/menta_magentocomponents": "dev-master",
        "aoemedia/menta_generalcomponents": "dev-master",
        "aoemedia/menta": "dev-develop"

    },

    "config": {
        "bin-dir": "bin"
    }
}